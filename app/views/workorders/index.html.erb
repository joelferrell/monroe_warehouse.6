<h1>Listing workorders</h1>

<table>
  <thead>
    <tr>
      <th>Wo number</th>
      <th>Start date</th>
      <th>Comp date</th>
      <th>Est completion</th>
      <th>Requestor</th>
      <th>Location</th>
      <th>Repair facility</th>
      <th>Repair type</th>
      <th>Summary</th>
      <th>Percent complete</th>
      <th>Item</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workorders.each do |workorder| %>
      <tr>
        <td><%= workorder.wo_number %></td>
        <td><%= workorder.start_date %></td>
        <td><%= workorder.comp_date %></td>
        <td><%= workorder.est_completion %></td>
        <td><%= workorder.requestor %></td>
        <td><%= workorder.location %></td>
        <td><%= workorder.repair_facility %></td>
        <td><%= workorder.repair_type %></td>
        <td><%= workorder.summary %></td>
        <td><%= workorder.percent_complete %></td>
        <td><%= workorder.item %></td>
        <td><%= workorder.priority %></td>
        <td><%= link_to 'Show', workorder %></td>
        <td><%= link_to 'Edit', edit_workorder_path(workorder) %></td>
        <td><%= link_to 'Destroy', workorder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

